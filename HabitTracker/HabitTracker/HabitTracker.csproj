  </ItemGroup>

  <ItemGroup>
    <Compile Update="Views\HabitsPage.xaml.cs">
      <DependentUpon>HabitsPage.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\InfoPage.xaml.cs">
      <DependentUpon>InfoPage.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\CalenderDailyPage.xaml.cs">
      <DependentUpon>CalenderDailyPage.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\HabitDetailPage.xaml.cs">
